<% layout('/layouts/boilerplate')%>
<h1>Edit Projects</h1>
<form action="/projects/<%=project._id%>?_method=PUT" method="POST">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" placeholder ="Project Name" value="<%=project.title%>">
    <input type="text" name="body" id="quillBody" placeholder ="Body" style="display:none">
    <div id="editor"></div>
    <input type="text" name="githubUrl" id="githubUrl" placeholder="Github URL" value="<%=project.githubUrl%>">
    <button id="submitProject">Submit</button>
</form>
<h1><%=project._id%></h1>
<script>
    window.onload = function(){
        var quillText = JSON.stringify(<%-project.body%>);
        quillText=JSON.parse(quillText);
        quill.setContents(quillText);
    }
</script>