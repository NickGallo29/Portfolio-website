<% layout('/layouts/boilerplate')%>
<div class="containter d-flex flex-column align-items-center">
    <h1>Login</h1>
    <form action="/login" method="POST">
        <div class="form-group">
            <label for="username">Username</label>
            <input class ="form-control" type="text" name="username" placeholder="username">
            <label for="password">Password</label>
            <input class="form-control" type="password" name="password" placeholder="password">
        </div>
        <button class="btn btn-outline-dark mt-2 w-100">Submit</button>
    </form>
    <p class = 'text-muted'>Not a member? <a href='/register' class='text-muted'>Sign up</a></p>
    <a href='/reset' class='text-muted'>Forgot Password?</a>
</div>